<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Position</th>
    <th>Department</th>
    <th>Description</th>
    <th>Apply</th>
    <th>Apply by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.position %></td>
    <td><%= job.department %></td>
    <td><%= job.description %></td>
    <td><%= job.apply %></td>
    <td><%= job.apply_by %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

