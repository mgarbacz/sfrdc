<div class="control-group">
  <label class="control-label" for="component_title">Title</label>
  <div class="controls">
    <input id="component_title" name="component[title]" type="text" />
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="component_content">Content</label>
  <div class="controls">
    <textarea id="component_content" name="component[content]"
              rows="20" cols="40"></textarea>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="component_size">Size</label>
  <div class="controls">
    <select id="component_size" name="component[size]">
      <option value="3">3</option>
      <option value="6">6</option>
      <option value="9">9</option>
      <option value="12">12</option>
    </select>
  </div>
</div>
