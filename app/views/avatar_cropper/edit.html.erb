<div class="row">
  <div class="span8">
    <%= image_tag @employee.avatar.url(:original), :id => 'avatar_full' %>
  </div>

  <p>Preview:</p>
  <div id="avatar_cropped_container" class="span4">
    <%= image_tag @employee.avatar.url(:original), :id => 'avatar_cropped' %>
  </div>
</div>

<%= form_for(@employee) do |f| %>
  <div id='crop_results'>
    <%= f.label 'x1' %>
    <%= f.text_field 'x1' %>
    <%= f.label 'y1' %>
    <%= f.text_field 'y1' %>
    <%= f.label 'width' %>
    <%= f.text_field 'width' %>
    <%= f.label 'height' %>
    <%= f.text_field 'height' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', employee_path(@employee) %>
